FROM python:3.12-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy entire source tree
COPY src/ src/
COPY server_scanner.py .

ENV PORT=8080
ENV PYTHONPATH=/app
CMD ["gunicorn", "--bind", "0.0.0.0:8080", "--workers", "1", "--threads", "8", "--timeout", "540", "server_scanner:app"]
